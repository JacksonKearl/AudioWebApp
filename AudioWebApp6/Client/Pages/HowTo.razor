                    <MudIcon Class="mx-auto my-auto" Icon="@Icons.Material.Filled.School" Size="@Size.Large" />
                </MudPaper>
            </MudStack>
        
    </MudCarouselItem>
</MudCarousel>
</div>


@code {
    private bool arrows = true;
