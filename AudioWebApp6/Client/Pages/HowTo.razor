@page "/how-to"


<div>
<MudCarousel Class="mud-width-full" Style="height:450px; margin-top:20px;" ShowArrows="@arrows" ShowBullets="@bullets" EnableSwipeGesture="@enableSwipeGesture" AutoCycle="@autocycle" AutoCycleTime="@autoCycleTime" TData="object">
        <MudCarouselItem Transition="transition" style="background-color:#4F6288">
