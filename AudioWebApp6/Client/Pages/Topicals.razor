@page "/topical"
@inject HttpClient Http
@inject ApiService apiService
@using AudioWebApp.Client.Services
@using AudioWebApp.Shared

<PageTitle>Topicals</PageTitle>
<MastHead headerText="Topical"/>

@if (topics == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudPaper Width="100%" Style="background-color: transparent;">
        <MudList Clickable="true">
            <MudListItem >
                Topical1
            </MudListItem>
            <MudListItem >
                Topical2
            </MudListItem>
            <MudListItem Text="Topical3" InitiallyExpanded="true">
                <NestedList>
                    <MudListItem >
                        subtopical 0
                    </MudListItem>
                    <MudListItem >
                        subtopical 1
                    </MudListItem>
                </NestedList>
            </MudListItem>
        </MudList>
    </MudPaper>
}



