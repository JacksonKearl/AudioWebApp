
<MudContainer Class="d-flex flex-grow-1 gap-1" Style="height:100px;">
    <MudCard Class="flex-auto d-flex py-4" Width="auto"  Elevation="0">
        @AudioTitle
    </MudCard>
    <MudCard Class="flex-none d-flex py-4" Width="50px"  Elevation="0">
        <MudToggleIconButton
            @bind-Toggled="@RadioPlaying"
            Icon="@Icons.Material.Filled.PlayCircleOutline"
            Color="@Color.Success" Title="off"
            Size="@Size.Large"
            ToggledIcon="@Icons.Material.Sharp.Equalizer"
            ToggledColor="@Color.Error"
            ToggledTitle="On"
            ToggledSize="@Size.Large" />
    </MudCard>
</MudContainer>

@code {
    [Parameter]
    public string AudioTitle { get; set; } = "Audio Title";
    private bool _playing;
    [Parameter]
    public bool RadioPlaying 
    { 
        get => _playing;
        set
        {
            if (_playing == value)
            {
                return;
            }
            else
            {
                _playing = value;
                RadioPlayingEventChanged.InvokeAsync(value);
            }

        } }

    [Parameter]
    public EventCallback<bool> RadioPlayingEventChanged { get; set; }
    public void ClosePlayer()
    {
         RadioPlaying = false;
    }

}
