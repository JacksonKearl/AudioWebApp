@page "/verse"
@using AudioWebApp.Client.Services
@inject SharedDataService SharedDataService
@inject ApiService apiService

<PageTitle>Verse by Verse</PageTitle>
<div>
    <MudCardContent>
        
        @if (dataReady == null)
        {
            <MudProgressCircular Color="Color.Default" Indeterminate="true" />
        }
        else
        {
            <MudPaper>
                <MudList Clickable="true">
                    @foreach (var book in apiService.Books)
                    {
                        <MudListItem Text="@book.Name">
                            <NestedList>
                                @foreach (var msg in book.Messages)
                                {
                                    <MudListItem Text="@msg.Name" @onclick="(e) => OpenAudio(msg.Name, msg.Link)" />
                                }
                            </NestedList>
                        </MudListItem>
                    }
                </MudList>
            </MudPaper>  
        }
    </MudCardContent>
</div>
@code
{
    string? dataReady;

    protected override async Task OnInitializedAsync()
    {
        await apiService.LoadData();
        dataReady = "dataLoaded";
    }

    public void OpenAudio(object audioName, object audioLink)
    {
        SharedDataService.AudioTitle = audioName.ToString();
        SharedDataService.AudioLink = audioLink.ToString();
        SharedDataService.TogglePlayer();
    }
    
}
