@page "/"
@inject NavigationManager NavigationManager
<PageTitle>Index</PageTitle>

<MudPaper Class="d-flex pa-2 justify-center">
    <MudText Typo="Typo.h3" GutterBottom="true"
             Style="@($"color:{Colors.Blue.Accent1}")">@appTitle</MudText>
</MudPaper>

<MudPaper Class="d-flex pa-4 justify-center"> 
    <MudButton Variant="Variant.Filled" 
                Style="@($"color:{Colors.Blue.Darken4}; background:{Colors.Blue.Accent1};")"
                OnClick="NavToRadio" 
                StartIcon="@Icons.Material.Filled.Radio">Listen Live</MudButton>
</MudPaper>
<MudPaper Class="d-flex pa-4 justify-center">
    <MudButton Variant="Variant.Text" Style="@($"color:{Colors.Blue.Darken4}")"
    OnClick="NavToExploreContent" >Explore Content</MudButton>
</MudPaper>

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
<MudAlert Severity="Severity.Normal">You can find documentation and examples on our website here: <MudLink Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Inherit"><b>www.mudblazor.com</b></MudLink></MudAlert>
